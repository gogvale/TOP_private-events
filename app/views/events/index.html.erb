<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Upcoming Events</h1>
        </div>
    </div>
    <div class="row">
      <% @events.upcoming.each do |event| %>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><%= event.name %></h4>
                    <h6 class="text-muted card-subtitle mb-2"><%= event.date %></h6>
                    <p class="card-text"><%= event.location %></p>
                    <%= link_to 'Show', event, class: 'card-link' %>
                    <%= link_to 'Edit', edit_event_path(event), class: 'card-link text-success' %>
                    <%= link_to 'Delete',event, method: :delete, class: 'card-link text-danger', data: { confirm: 'Are you sure?' } %>
                </div>
            </div>
        </div>
      <% end %>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Past Events</h1>
        </div>
    </div>
    <div class="row">
      <% @events.previous.each do |event| %>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><%= event.name %></h4>
                    <h6 class="text-muted card-subtitle mb-2"><%= event.date %></h6>
                    <p class="card-text"><%= event.location %></p>
                    <%= link_to 'Show', event, class: 'card-link' %>
                    <%= link_to 'Edit', edit_event_path(event), class: 'card-link text-success' %>
                    <%= link_to 'Delete',event, method: :delete, class: 'card-link text-danger', data: { confirm: 'Are you sure?' } %>
                </div>
            </div>
        </div>
      <% end %>
    </div>
</div>